---
import Layout from '../layouts/Layout.astro';
import Card from '../components/Card.astro';
import SectionContainer from "../components/SectionContainer.astro";

const projects = [
  { name: "StudyWiz", description: "AI generated flashcards built with openAI’s GPT and Nextjs(Javascript)", link: "https://www.studywiz.co/" },
  { name: "OpenSaasFinder", description: "A directory for discovering popular alternatives to paid Saas products.", link: "https://www.opensaasfinder.com/" },
  { name: "StudyWiz", description: "AI generated flashcards built with openAI’s GPT and Nextjs(Javascript)", link: "https://www.studywiz.co/" },
  { name: "OpenSaasFinder", description: "A directory for discovering popular alternatives to paid Saas products.", link: "https://www.opensaasfinder.com/" }


]

const socials = [
  {name: "Github", link: "https://github.com/ThisIsRahmat" },
   {name: "Email", link: "mailto:thisisrahmat@gmail.com"}
  
]

---

<Layout title="Rahmat">
	<main>


        <!-- Header/Hero Section -->
    <SectionContainer>

	 <div class="content-container">

<div class="inline-flex space-x-4">

	   <image
                src="/assets/profile.png"
                alt={" Illustration of Rahmat"}
                width={160}
                height={160}
                aspectRatio={1 / 1}
                format={"webp"}
                class="rounded-full h-20 w-20 bg-neutral-100 object-cover p-4"
            />

<div class="flex items-center justify-center">
   <h1
                        class="text-2xl lg:text-3xl font-medium leading-8 lg:leading-10 tracking-tight lg:tracking-tighter mb-0"
                    >
                        Hi I&apos;m Rahmat
                    </h1>
			</div>
				</div>
				</div>

    <div class="content-container">
                <div class="page-title--content max-w-[54rem] mb-8 lg:mb-4">
                 
                </div>
                <div
                    class="content space-y-2 text-xl md:text-3xl font-medium leading-8 lg:leading-10  text-neutral-500"
                >
                  	<p>  I am an engineer and occassional technical instructor based in  the UK 🇬🇧 </p>
                    <p>   I enjoy building software and I am currently building my first Saas business, <a href="https://usescreenly.com/"> <span> Screenly </span> </a>,  a one-way video interviewing platform to screen candidates.</p>

</div>


   <!-- Contact Section -->

   
  <div
                    class="content pt-8 space-y-2 text-md md:text-xl font-medium leading-8 lg:leading-10  text-neutral-500"
                >
                  	<p>  You can get in touch with me on: </p>
                   

	<div class="inline-flex space-x-4 ">
  {socials.map((social) => (
         <div class="flex flex-col flex-1">
       
          <a href={social.link}>
            <p class="md:text-xl text-lg ">
              <span class="hover:underline hover:text-[#1c63f1] hover:underline-offset-2"> {social.name} </span>
            </p>
          </a>

          <!-- To-do: Figure out how to import icons from lucide to site !-->
            <!--  <Fragment {social.icon}/>  --!>
    
 
      </div>
      ))}
</div>
</div>


		    </SectionContainer>


      <!-- Projects -->
    <SectionContainer>

    <h2 class="font-medium text-2xl lg:text-3xl text-h4 text-neutral-500 my-4 ">
                Projects
            </h2>
<div  class="grid scroll-m-24 gap-5 grid-cols-1 md:grid-cols-2 w-full">
  {projects.map((project) => (
      <div class="hover:scale-105 hover:rotate-2 flex border-2 flex-col-reverse justify-between gap-x-16 gap-y-8 rounded-2xl  p-8 sm:w-11/12 sm:max-w-xl sm:flex-row-reverse sm:items-end lg:w-full lg:max-w-none lg:flex-auto lg:flex-col lg:items-start lg:gap-y-28">
         <div class="px-4 py-5 sm:p-6 space-4">
       
          <a href={project.link}>
            <p class=" text-xl md:text-3xl text-neutral-500 content pb-2 ">
            {project.name} 
			  
            </p>
			 <div class="content break-words  text-2xl font-medium leading-10 tracking-tight lg:tracking-tighter text-neutral-500 ">
                                        <p>{project.description}</p>
                                    </div>
          </a>

 </div>
      </div>
      ))}
</div>
</div>


	</SectionContainer>

      <!-- Blog -->
