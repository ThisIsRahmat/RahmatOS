<div  class="grid scroll-m-24  gap-5 grid-cols-1 md:grid-cols-2 w-full">
  {projects.map((project) => (
      <div class="  flex flex-col-reverse justify-between gap-x-16 gap-y-8 rounded-2xl   sm:w-11/12 sm:max-w-xl sm:flex-row-reverse sm:items-end lg:w-full lg:max-w-none lg:flex-auto lg:flex-col lg:items-start lg:gap-y-28">
       
       
