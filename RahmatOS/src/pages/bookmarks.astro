---
import Layout from '../layouts/Layout.astro';
import bookmarksData from '../content/data/bookmarks.json';
---

<Layout title="Bookmarks â€“ Rahmat Junaid">
	<div class="max-w-2xl mx-auto">
		<h1 class="text-2xl mb-8">Bookmarks</h1>
		<p class="text-lg text-gray-800 leading-relaxed mb-8">
			A living collection of links worth revisiting.
		</p>

		<div class="space-y-8">
			{bookmarksData.map((bookmark) => (
				<div class="group">
					<h3 class="text-lg font-medium text-gray-900 mb-2">
						<a href={bookmark.href} class="hover:text-blue-600 transition-colors" target="_blank" rel="noopener noreferrer">
							{bookmark.title}
						</a>
					</h3>
					<p class="text-gray-600 mb-3 leading-relaxed">
						{bookmark.description}
					</p>
					<div class="flex flex-wrap gap-2">
						{bookmark.type.map((tag) => (
							<span class="px-2 py-1 text-xs bg-gray-100 text-gray-500 rounded-full">
								{tag}
							</span>
						))}
					</div>
				</div>
			))}
		</div>
	</div>
</Layout>


