---
interface Props {
	title: string;
}

const { title } = Astro.props;

---

<!doctype html>
<html lang="en" class="scroll-smooth">
	<head>
		<meta charset="UTF-8" />
		<meta name="description" content="Rahmat Junaid - AI Engineer and Technologist based in the UK. Exploring voice agents and conversational AI." />
		<meta name="viewport" content="width=device-width" />
		<link rel="icon" type="image/png" href="/images/me-circle.png" />
		<meta name="generator" content={Astro.generator} />
		<link rel="preconnect" href="https://fonts.googleapis.com">
		<link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
		<link href="https://fonts.googleapis.com/css2?family=Inter:ital,opsz,wght@0,14..32,100..900;1,14..32,100..900&display=swap" rel="stylesheet">
		<title>{title}</title>
	</head>
	<body class="font-inter bg-white text-gray-900 scroll-smooth antialiased flex flex-col min-h-screen">
		
		<!-- Navigation -->
		<nav class="w-full px-6 py-6">
			<div class="max-w-4xl mx-auto flex flex-row items-center justify-between gap-4">
				<a href="/" class="flex items-center gap-3 font-medium tracking-tight hover:text-gray-700 transition-colors">
					<img src="/images/me.jpg" alt="Rahmat Junaid" class="w-14 h-14 rounded-full object-cover shadow-sm" />
					<span class="hidden md:block">Rahmat Junaid <span class="text-gray-400 mx-2">|</span> <span class="text-gray-600">AI Engineer</span></span>
				</a>
				<div class="flex gap-3 md:gap-6">
				<a href="/blog" class="text-xs md:text-sm font-semibold text-gray-600 uppercase tracking-wider hover:text-blue-600 active:text-blue-600 visited:text-gray-600 transition-colors">Blog</a>
				<a href="/experiments" class="text-xs md:text-sm font-semibold text-gray-600 uppercase tracking-wider hover:text-blue-600 active:text-blue-600 visited:text-gray-600 transition-colors">Experiments</a>
				<!-- <a href="/books" class="text-xs md:text-sm font-semibold text-gray-600 uppercase tracking-wider hover:text-blue-600 active:text-blue-600 visited:text-gray-600 transition-colors">Books</a> -->
				<a href="/bookmarks" class="text-xs md:text-sm font-semibold text-gray-600 uppercase tracking-wider hover:text-blue-600 active:text-blue-600 visited:text-gray-600 transition-colors">Bookmarks</a>
			</div>
			</div>
		</nav>

		<main class="flex-1 w-full max-w-4xl mx-auto px-6 py-12">
			<slot />
		</main>

		<!-- Footer -->
		<footer class="w-full px-6 py-8 border-t border-gray-100 mt-12">
			<div class="max-w-4xl mx-auto flex flex-col md:flex-row justify-between items-center text-sm text-gray-500">
				<div>
					Vibe coded with Antigravity
				</div>
				<div class="flex gap-4 mt-4 md:mt-0">
					<a href="https://twitter.com/thisis_rahmat" class="hover:text-blue-600 transition-colors">Twitter</a>
					<a href="https://github.com/thisisrahmat" class="hover:text-blue-600 transition-colors">GitHub</a>
				</div>
			</div>
		</footer>

	</body>
</html>

<style is:global>
/* Custom styles */
*,
*::before,
*::after {
    box-sizing: border-box;
    margin: 0;
    padding: 0;
}

html {
    scroll-behavior: smooth;
}

body {
    font-family: 'Inter', sans-serif;
    font-size: 16px;
	line-height: 1.6;
	color: #1f2937;
	background-color: #ffffff;
}

h1, h2, h3, h4, h5, h6 {
    font-family: 'Inter', sans-serif;
    font-weight: 600;
    line-height: 1.3;
    letter-spacing: -0.02em;
}
</style>